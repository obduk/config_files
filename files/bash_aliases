# ~/.bash_aliases
alias f='fg'
alias h='history'
alias j='jobs'
alias la='ls -lhA'
alias ll='ls -lh'
alias l='ll'
alias n='sudo netstat -ntlp'
alias u='sudo aptitude update && sudo aptitude safe-upgrade'
alias v='vim'

# git
alias g='git'
alias ga='git add -A && git commit && git push'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit'
alias gca='git commit -a'
alias gd='git diff'
alias gdc='git diff --cached'
alias gf='git fetch'
alias gg='git grep'
alias gi='git info'
alias gl='git pull'
alias gp='git push'
alias gr='git branch -r'
alias gs='git status'
alias gst='git status'

# git workspace
alias w='git workspace'
alias wb='git workspace branch'
alias wf='git workspace fetch'
alias wi='git workspace info'
alias wl='git workspace pull'
alias wr='git workspace branch -r'
alias ws='git workspace status'

# ruby
alias b='bundle exec'
alias bi='bundle install'
alias r='bundle exec rake'
alias rc='bundle exec rails console'
alias rr='bundle exec rails runner'
alias rs='bundle exec rails server'
alias rt='bundle exec rake test'

alias x='xvfb-run'
alias xr='xvfb-run bundle exec rake'

