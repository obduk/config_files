#!/bin/bash
set -e

if ! command -v brew > /dev/null 2>&1; then
  $(command -v ruby) -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

set -v

brew update

brew upgrade

brew install \
  awscli \
  bash-completion \
  git \
  heroku \
  htop \
  imagemagick \
  libmagic \
  ncdu \
  node \
  postgresql \
  rbenv \
  tmux \
  tree \
  watch \
  yarn

brew cask install \
  docker \
  google-backup-and-sync \
  google-chrome \
  sonos \
  keepassx \
  slack \
  spotify \
  tunnelblick \
  visual-studio-code

brew cleanup

brew doctor

brew missing

code --instal-extensions alefragnani.project-manager
code --instal-extensions beauallison.brew-services
code --instal-extensions dbaeumer.vscode-eslint
code --instal-extensions donjayamanne.githistory
code --instal-extensions eamodio.gitlens
code --instal-extensions EditorConfig.EditorConfig
code --instal-extensions formulahendry.auto-close-tag
code --instal-extensions ms-python.python
code --instal-extensions msjsdiag.debugger-for-chrome
code --instal-extensions PeterJausovec.vscode-docker
code --instal-extensions rebornix.ruby
code --instal-extensions shinnn.stylelint

echo "setup complete"
