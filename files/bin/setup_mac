#!/bin/bash
set -e

if ! command -v brew > /dev/null 2>&1; then
  $(command -v ruby) -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

set -v

brew update

brew upgrade

brew install \
  awscli \
  bash-completion \
  circleci \
  git \
  heroku \
  imagemagick \
  libmagic \
  ncdu \
  neovim \
  node \
  postgresql \
  rbenv \
  yarn

brew cask install \
  chromedriver \
  docker \
  google-backup-and-sync \
  google-chrome \
  keepassx \
  slack \
  spotify \
  tunnelblick \
  visual-studio-code

brew cleanup

brew doctor

brew missing

echo "setup complete"
