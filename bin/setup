#!/bin/bash
set -e

cd $(dirname $0)/..

function install_brew() {
  if ! type brew &>/dev/null; then
    $(command -v ruby) -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi
}

function brew_install_missing_formulas() {
  REQUIRED="
    awscli
    heroku
    ncdu
    neovim
    qpdf
    nvm
    rbenv
    shfmt
    terraform
  "

  INSTALLED=$(brew list)

  for formula in $REQUIRED; do
    grep -q $formula <<<$INSTALLED || brew install $formula
  done
}

function brew_cask_install_missing_formulas() {
  REQUIRED="
    docker
    google-backup-and-sync
    google-chrome
    google-drive-file-stream
    keepassx
    spotify
    visual-studio-code
    zoomus
  "

  INSTALLED=$(brew cask list)

  for formula in $REQUIRED; do
    grep -q $formula <<<$INSTALLED || brew cask install $formula
  done
}

cd files

for file in $(git ls-files); do
  target=$HOME/$file

  if [ ! -h $target ]; then
    ln -fhsv $(pwd)/$file $target
  fi
done

set -v

install_brew

brew update

brew upgrade

brew_install_missing_formulas

brew cask upgrade

brew_cask_install_missing_formulas

brew cleanup

brew doctor || true

git config --global core.editor "code --wait"
git config --global core.excludesfile "~/.gitignore"
git config --global fetch.prune true
git config --global user.name "Owen Ben Davies"
git config --global user.email "734943+owenbendavies@users.noreply.github.com"

if [ ! -f $HOME/.ssh/id_rsa ]; then
  ssh-keygen

  cat $HOME/.ssh/id_rsa.pub
fi

echo "setup complete"
