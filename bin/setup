#!/bin/bash
set -e

cd $(dirname $0)/..

function install_brew() {
  if ! type brew &>/dev/null; then
    $(command -v ruby) -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi
}

function brew_install_missing_formulas() {
  REQUIRED="
    awscli
    ncdu
    neovim
    n
    node
    shfmt
  "

  INSTALLED=$(brew list --formula)

  for i in $REQUIRED; do
    grep -q $i <<<$INSTALLED || brew install $i
  done
}

function brew_cask_install_missing_formulas() {
  REQUIRED="
    google-backup-and-sync
    google-chrome
    macpass
    postman
    signal
    spotify
    virtualbox
    virtualbox-extension-pack
    visual-studio-code
    zoom
  "

  INSTALLED=$(brew list --cask)

  for i in $REQUIRED; do
    grep -q $i <<<$INSTALLED || brew install $i
  done
}

function install_missing_npms() {
  REQUIRED="
    npm
    yarn
  "

  INSTALLED=$(npm ls --global --depth=0)

  for i in $REQUIRED; do
    grep -q $i <<<$INSTALLED || npm install --global $i
  done
}

cd files

for file in $(git ls-files); do
  target=$HOME/$file

  if [ ! -h $target ]; then
    ln -fhsv $(pwd)/$file $target
  fi
done

set -v

install_brew

brew update

brew upgrade

brew_install_missing_formulas

brew_cask_install_missing_formulas

brew cleanup

brew doctor || true

install_missing_npms

npm update --global

if [ ! -f $HOME/.ssh/id_rsa ]; then
  ssh-keygen

  cat $HOME/.ssh/id_rsa.pub
fi

echo "setup complete"
