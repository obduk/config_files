#!/bin/bash
set -e

if ! command -v brew >/dev/null 2>&1; then
  $(command -v ruby) -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

set -v

brew update

brew upgrade

brew install \
  awscli \
  bash-completion \
  circleci \
  git \
  go \
  heroku/brew/heroku \
  imagemagick \
  libmagic \
  ncdu \
  neovim \
  node \
  postgresql \
  python2 \
  python3 \
  rbenv \
  shfmt \
  terraform \
  yarn

brew cask install \
  chromedriver \
  docker \
  google-backup-and-sync \
  google-chrome \
  keepassx \
  slack \
  spotify \
  tunnelblick \
  visual-studio-code

brew cleanup

brew doctor

brew missing

pip install --upgrade pip
pip install --upgrade setuptools
pip3 install --upgrade pip
pip3 install --upgrade setuptools
pip3 install --upgrade virtualenv

echo "setup complete"
