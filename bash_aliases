alias b='bundle exec'
alias c='bundle exec rails console'
alias d='git diff'
alias g='grep'
alias h='history'
alias i='bundle install'
alias j='jobs'
alias l='ls -lh'
alias m='man'
alias n='sudo netstat -ntlp'
